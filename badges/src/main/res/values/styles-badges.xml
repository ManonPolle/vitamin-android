<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearance.Button.RoundedCorners" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.Vitamin.Badge.Standalone" parent="@style/ShapeAppearance.Button.RoundedCorners">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">8dp</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Widget.Vitamin.Badge.Standalone.Brand" parent="@style/Widget.Vitamin.Badge.Standalone">
        <item name="background">?attr/vtmnBackgroundColorBrandPrimary</item>
        <item name="android:textColor">@color/vtmn_badges_brand_text_color</item>>
    </style>

    <style name="Widget.Vitamin.Badge.Standalone.Brand.Small" parent="@style/Widget.Vitamin.Badge.Standalone.Brand">
        <item name="android:textAppearance">@style/TextAppearance.Vitamin.Caption</item>
        <item name="android:textSize">8dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
    </style>

    <style name="Widget.Vitamin.Badge.Standalone.Brand.Medium" parent="@style/Widget.Vitamin.Badge.Standalone.Brand">
        <item name="android:textAppearance">@style/TextAppearance.Vitamin.Caption</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>

    <style name="Widget.Vitamin.Badge.Standalone.Brand.Large" parent="@style/Widget.Vitamin.Badge.Standalone.Brand">
        <item name="android:textAppearance">@style/TextAppearance.Vitamin.Body.Regular.Text3</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
    </style>
</resources>